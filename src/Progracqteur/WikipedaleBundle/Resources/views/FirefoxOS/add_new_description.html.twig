<div id="add_new_description_div" style="display:none;">
   <form method="post" id="add_new_report_form">
      <input type="hidden" name="lon" readonly="true" />
      <input  type="hidden" name="lat" readonly="true" />
   
      <fieldset id="div_new_report_form_user_mail">
         <legend>{{ 'new_report.firefoxos_legend'|trans({}, 'reportMessages') }}</legend>

         <section>
            <p>
               <input type="text" id="add_new_report_form__user_label" name="user_label" placeholder="{{ 'new_report.name_placeholder'|trans({}, 'reportMessages') }}" />
            </p>

            <p>
               <input type="text" id="add_new_report_form__email" name="email" placeholder="{{ 'new_report.firefoxos_mail_placeholder'|trans({}, 'reportMessages') }}" />
            </p>

            <p>
               <input type="text" id="add_new_report_form__user_phonenumber" name="user_phonenumber" placeholder="{{ 'new_report.firefoxos_phone_placeholder'|trans({}, 'reportMessages') }}" />
            </p>
         </section>
      </fieldset>

      <fieldset>
         <legend>{{ 'new_report.describe_the_problem'|trans({}, 'reportMessages') }}</legend>

         <section>
            <p>
               <input type="text" id="add_new_report_form__lieu" name="lieu" placeholder="{{ 'new_report.location_placeholder'|trans({}, 'reportMessages') }}" /><br />
            </p>

            <p>
               <select id="add_new_report_form__categories" name="categories" style="width:70%;" data-placeholder="{{ 'new_report.categories_placeholder'|trans({}, 'reportMessages') }}">
                  {% for category in categories %}
                     {% if category.hasChildren %}
                        <optgroup label="{{ category.label }}" >
                           {% for childCategory in category.children %}
                              {% if childCategory.term in terms_allowed %}
                                 <option value="{{ childCategory.id }}" data-term="{{ childCategory.term }}">{{ childCategory.label }}</option>
                              {% endif %}
                           {% endfor %}
                        </optgroup>
                     {% else %}
                        <option value="{{ category.id }}" data-term="{{ category.term }}">{{ category.label }}</option>
                     {% endif %}
                  {% endfor %}
                  </optgroup>
               </select>
            </p>

            <p>
               <textarea id="add_new_report_form__description" name="description" placeholder="{{ 'new_report.description_placeholder'|trans({}, 'reportMessages') }}"></textarea>
            </p>
         </section>
      </fieldset>
   </form>
</div>

<section role="status">
<p id="add_new_report_form__message" class="message">
</p>
<section>

<button id="new_report_form_submit_button" style="display:none">
   {{ 'new_report.submit'|trans({}, 'reportMessages') }}
</button>
      
<a id="new_place_form_menu_return_button" href="{{ path('wikipedale_firefoxos_index')}}" class="button" style="display:none">
   {{ 'new_report.menu_return'|trans({}, 'reportMessages') }}
</a>
