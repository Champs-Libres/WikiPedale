{% extends "ProgracqteurWikipedaleBundle::layout_admin_zone.html.twig" %}

{% block body %}

<h1>Model\Category</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Label</th>
            <td>{{ entity.label }}</td>
        </tr>
        <tr>
            <th>Parent</th>
            <td>
                {% if entity.parent %}
                    {{ entity.parent }}
                {% else %}
                    {{ 'admin.category.show.parent.empty'|trans({}, 'messages') }}
                {% endif %}
            </td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_category') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_category_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('admin_category_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}