{% extends "ProgracqteurWikipedaleBundle::layout_admin.html.twig" %}

{% block body %}

<h1>Management\Notation edit</h1>

<form action="{{ path('wikipedale_notations_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('wikipedale_notations') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('wikipedale_notations_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}