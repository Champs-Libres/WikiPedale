{% extends "ProgracqteurWikipedaleBundle::layout_admin.html.twig" %}

{% block body %}

<h1>Management\Notation</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('wikipedale_notations') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('wikipedale_notations_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('wikipedale_notations_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}