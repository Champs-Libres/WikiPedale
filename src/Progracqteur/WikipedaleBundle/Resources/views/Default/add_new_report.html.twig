{#
    Template that display the form used to add a new description/report.
#}

<div id="div_add_new_description_button" class="right_menu"  title="{{ 'tools_panel.signalement_add_help'|trans({}, 'messages') }}">
  <img src="{{ asset('img/menu/ajout.png') }}">
  {{ 'tools_panel.signalement_add'|trans({}, 'messages') }}
</div>

<div id="div_add_new_description_cancel_button" class="right_menu cancel" style="display:none;"  title="{{ 'tools_panel.signalement_cancel_add_help'|trans({}, 'messages') }}">
  {{ 'tools_panel.cancel'|trans({}, 'messages') }}
</div>

<form id="form__add_new_description" method="post" class="lateral_content hidden">
  <input type="hidden" name="lon" readonly="true" />
  <input  type="hidden" name="lat" readonly="true" />
  
  <fieldset id="div_new_report_form_user_mail">
    <legend><a href="#login_form_div">{{ 'AddPoint.userdata.legend1'|trans({}, 'pointMessages') }}</a> {{ 'AddPoint.userdata.legend2'|trans({}, 'pointMessages') }}</legend>

    <p>
      <img src="{{ asset('img/verif_rien.png') }}" class="verif" id="add_new_description_form_informer__user_label" alt="is the field ok">
      <label for="add_new_description_form__user_label">{{ 'AddPoint.userdata.name'|trans({}, 'pointMessages') }}</label>
      <input type="text" id="add_new_description_form__user_label" name="user_label" placeholder="{{ 'AddPoint.userdata.name_placeholder'|trans({}, 'pointMessages') }}" />
    </p>

    <p>
      <img src="{{ asset('img/verif_rien.png')}}" class="verif" id="add_new_description_form_informer__email" alt="is the field ok">
      <label for="add_new_description_form__email">{{ 'AddPoint.userdata.mail'|trans({}, 'pointMessages') }}</label>
      <input type="text" id="add_new_description_form__email" name="email" placeholder="{{ 'AddPoint.userdata.mail_placeholder'|trans({}, 'pointMessages') }}" />
    </p>

    <p>
      <img src="{{asset('img/verif_rien.png')}}" class="verif" id="add_new_description_form_informer__user_phonenumber" alt="is the field ok">
      <label for="add_new_description_form__user_phonenumber">{{ 'AddPoint.userdata.phone'|trans({}, 'pointMessages') }}</label>
      <input type="text" id="add_new_description_form__user_phonenumber" name="user_phonenumber" placeholder="{{ 'AddPoint.userdata.phone_placeholder'|trans({}, 'pointMessages') }}" />
    </p>
  </fieldset>
  
  <fieldset id="put_marker_on_the_map_fieldset">
      <legend>{{ 'AddPoint.map.legend'|trans({}, 'pointMessages') }}</legend>
      <img src="{{ asset('img/AddPoint.png')}}" />
      <img src="{{asset('img/verif_rien.png')}}" class="verif" id="add_new_description_form_informer__map" alt="is the field ok">
  </fieldset>


  <fieldset>
    <legend>{{ 'AddPoint.PointData.legend'|trans({}, 'pointMessages') }}</legend>
      
    <p>
      <img src="{{asset('img/verif_rien.png')}}" class="verif" id="add_new_description_form_informer__lieu" alt="is the field ok">
      <label for="add_new_description_form__lieu">{{ 'AddPoint.PointData.location'|trans({}, 'pointMessages') }}</label> 
      <input type="text" id="add_new_description_form__lieu" name="lieu" placeholder="{{ 'AddPoint.PointData.location_placeholder'|trans({}, 'pointMessages') }}" /><br />
    </p>

    <p>
      <img src="{{asset('img/verif_rien.png')}}" class="verif" id="add_new_description_form_informer__category" alt="is the field ok">
      <label for="add_new_description_form__category">{{ 'AddPoint.PointData.categories'|trans({}, 'pointMessages') }}</label>
      <select id="add_new_description_form__category" name="category" style="width:250px;" data-placeholder="{{ 'AddPoint.PointData.categories_placeholder'|trans({}, 'pointMessages') }}">
          {% for category in categories %}
              {% if category.hasChildren %}
                    <optgroup label="{{ category.label }}" >
                       {% for childCategory in category.children %}
                            {% if childCategory.term in terms_allowed %}
                            <option value="{{ childCategory.id }}" data-term="{{ childCategory.term }}">{{ childCategory.label }}</option>
                            {% endif %}
                       {% endfor %}


                    </optgroup>
              
              {% else %}
              
                    <option value="{{ category.id }}" data-term="{{ category.term }}">{{ category.label }}</option>
              {% endif %}
              
          {% endfor %}
        </optgroup>
      </select>
    <p/>

    <p>
      <span id="add_new_description_form_informer__category_medium_warning" class="warningMessage">{{ 'AddPoint.medium_warning'|trans({}, 'pointMessages') }}</span>
    </p>


  <p>
    <img src="{{asset('img/verif_rien.png')}}" class="verif" id="add_new_description_form_informer__description" alt="is the field ok">
    <label for="add_new_description_form__description">{{ 'AddPoint.PointData.description'|trans({}, 'pointMessages') }}</label> 
    <textarea id="add_new_description_form__description" name="description" rows="5" placeholder="{{ 'AddPoint.PointData.description_placeholder'|trans({}, 'pointMessages') }}"></textarea>
  </p>
</fieldset>
  
  <div id="add_new_description_form__message" class="message">
  </div>
  
  <div style="text-align:right;">
    <input class="envoi" id="new_report_form_submit_button" type="submit" value="{{ 'AddPoint.submit'|trans({}, 'pointMessages') }}">
  </div>
</form>