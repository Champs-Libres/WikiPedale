{#
    Template that display the option to filter the report display and the export link.
#}

<div id="filter_and_export_button" class="right_menu" title="{{ 'tools_panel.filter_and_export_help'|trans({}, 'messages') }}">
   <img src="{{ asset('img/menu/recherche.png') }}">
   {{ 'tools_panel.filter_and_export'|trans({}, 'messages') }}
</div>

<div id="stop_filter_and_export_button" class="right_menu cancel" style="display:none;"  title="{{ 'tools_panel.cancel_filter_and_export_help'|trans({}, 'messages') }}">
   {{ 'tools_panel.cancel'|trans({}, 'messages') }}
</div>

<div id="filter_and_export_menu" class="lateral_content hidden">
   <div class="padding_bottom_small">
      <div>
         <label for="filtering__moderator_status__checkbox">
            <input type="checkbox" id="filtering__moderator_status__checkbox">
            {{ 'filter.by_moderator_status'|trans({}, 'messages') }}</label>
         <div id="filtering__moderator_status__form_div" class="hidden">
            <select style="width:100%" data-placeholder="" id="filtering__moderator_status__value" class="filter" multiple>
               <option class="option_white" value="0">{{ 'filter.white_state'|trans({}, 'messages') }}</option>
               <option class="option_red" value="1">{{ 'filter.red_state'|trans({}, 'messages') }}</option>
               <option class="option_orange" value="2">{{ 'filter.orange_state'|trans({}, 'messages') }}</option>
               <option class="option_green" value="3">{{ 'filter.green_state'|trans({}, 'messages') }}</option>
            </select>
         </div>
      </div>
   
      <div>
         <label for="filtering__moderator_rejected_status__checkbox">
            <input type="checkbox" id="filtering__moderator_rejected_status__checkbox">
            {{ 'filter.display_rejected_report'|trans({}, 'messages') }}</label>
      </div>
   </div>

   <div class="padding_bottom_small">
      <label for="filtering__timestamp__checkbox">
         <input type="checkbox" id="filtering__timestamp__checkbox">
         {{ 'filter.by_timestamp'|trans({}, 'messages') }}</label>
      <div id="filtering__timestamp__form_div" class="hidden">
         <input style="width:100%" type="text" id="filtering__timestamp__value_begin" class="filter" placeholder="{{ 'filter.placeholder_timestamp_begin' | trans({}, 'messages') }}">
         <input style="width:100%" type="text" id="filtering__timestamp__value_end" class="filter" placeholder="{{ 'filter.placeholder_timestamp_end' | trans({}, 'messages') }}">
      </div>
   </div>

   <div class="padding_bottom_small">
      <div>
         <label for="filtering__category__checkbox">
            <input type="checkbox" id="filtering__category__checkbox">
            {{ 'filter.by_category'|trans({}, 'messages') }}</label>
         <div id="filtering__category__form_div" class="hidden">
            <select style="width:100%" data-placeholder="" id="filtering__category__value_parent">
            </select>

            <select style="width:100%" data-placeholder="" id="filtering__category__value_children" class="filter" multiple>
            </select>
         </div>
      </div>
      <div>
         <label for="filtering__long_term_category__checkbox">
            <input type="checkbox" id="filtering__long_term_category__checkbox">
            {{ 'filter.display_long_term_category_report'|trans({}, 'messages') }}</label>
         <div id="filtering__long_term_category__form_div" class="hidden">
            <select style="width:100%" data-placeholder="" id="filtering__long_term_category__value_parent">
            </select>

            <select style="width:100%" data-placeholder="" id="filtering__long_term_category__value_children" class="filter" multiple>
            </select>
         </div>
      </div>
   </div>


   <div class="padding_bottom_small">
      <label for="filtering__manager__checkbox">
         <input type="checkbox" id="filtering__manager__checkbox">
         {{ 'filter.by_manager'|trans({}, 'messages') }}</label>
      <div id="filtering__manager__form_div" class="hidden">
            <select style="width:100%" data-placeholder="" id="filtering__manager__value" class="filter" multiple>
               <option value="-1">{{ 'filter.without_manager'|trans({}, 'messages') }}</option>
            </select>
      </div>
   </div>

   <div>
      {{ 'filter.export'|trans({}, 'messages') }} :
      <a id="csv_export_link" href="{{ path('wikipedale_report_list_by_city', { _format:'csv'}) }}?city={{ app.session.get('city').slug }}">
     CSV
      </a>
      <a id="csv_basic_export_link" href="{{ path('wikipedale_report_list_by_city', { _format:'csv'}) }}?city={{ app.session.get('city').slug }}" style="display:none">
     CSV
      </a>
   </div>
</div>